<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<%= render 'form', document: @document %>

<table border="1">
  <thead>
    <tr>
      <th>Files</th>
      <th>Count</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td>
          <% document.files.each do |file| %>
            <%= link_to file.filename, file, target: :blank %> <br>
          <% end %>
        </td>
        <td>
          <%= document.files.count %>
        </td>
        <td style="width: 30px"><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
